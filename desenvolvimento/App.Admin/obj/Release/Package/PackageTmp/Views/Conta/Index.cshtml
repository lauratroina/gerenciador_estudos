<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title></title>
    <link rel="icon" href="@Url.Content("~/Content/images/favicon.ico")" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="sname" content="@Environment.MachineName">

    @Styles.Render("~/Content/css")
</head>

<!-- 1. $BODY ====================================================================================== -->
<body class="theme-adminflare page-signin">

    <!-- Page background -->
    <div id="page-signin-bg">
        <!-- Background overlay -->
        <div class="overlay"></div>
        <!-- Replace this with your bg image -->
        <img src="@Url.Content("~/Content/images/signin-bg.jpg")" alt="">
    </div>
    <!-- / Page background -->
    <!-- Container -->
    <div class="signin-container">

        @*<!-- Left side -->
        <div class="signin-info">
            <a href="#" class="logo">
                <img src="" alt="" style="margin-top: -5px;">
                <br /><br />
                admin
            </a> <!-- / .logo -->
            <div class="slogan">
                
                <br /><br />
            </div> <!-- / .slogan -->
        </div>
        <!-- / Left side -->*@
        <!-- Right side -->
        <div class="signin-form">
            @using (Html.BeginForm("Index", "Conta", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "signin-form_id" }))
            {
                @Html.AntiForgeryToken();
                @Html.ValidationSummary(true)

                <div class="signin-text">
                    <span>Realize seu Acesso</span>
                </div> <!-- / .signin-text -->

                <div class="form-group w-icon">
                    @Html.TextBoxFor(m => m.login, new { validate = "required", @class = "form-control input-lg", placeholder = "Login de acesso" })
                    <span class="fa fa-user signin-form-icon"></span>
                </div> <!-- / Username -->

                <div class="form-group w-icon">
                    @Html.PasswordFor(m => m.senha, new { validate = "required", @class = "form-control input-lg", placeholder = "Senha de acesso" })
                    <span class="fa fa-lock signin-form-icon"></span>
                </div> <!-- / Password -->

                <div class="form-actions">
                    <input type="submit" value="ACESSAR" class="signin-btn bg-primary">
                </div> <!-- / .form-actions -->
            }
        </div>
        <!-- Right side -->
    </div>
    <!-- / Container -->
    <!--[if !IE]> -->
    @Scripts.Render("~/bundles/library.not.ie")
    <!-- <![endif]-->
    <!--[if lte IE 9]>
    @Scripts.Render("~/bundles/library.only.ie")
    <![endif]-->
    @Scripts.Render("~/bundles/scripts")

    <script type="text/javascript">
        init.push(function () {
            //
        });

        window.PixelAdmin.start(init);
    </script>
</body>

</html>